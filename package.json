  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --format 'node_modules/eslint-friendly-formatter' --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
