    "pkgfiles": "egg-bin pkgfiles",
    "autod": "autod"
  },
  "files": [
    "config",
    "agent.js",
    "lib",
    "app.js"
  ],
  "ci": {
    "version": "8, 9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqlwwx/egg-nacos.git"
  },
  "bugs": {
